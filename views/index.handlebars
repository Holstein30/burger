<div class="container">
    <div class="row top-row">
        <center>
            <h2>Add a Burger</h2>
            <form class="create-form col-md-12" action="/burger/add" method="POST">

                <div class="form-group">
                    <label for="ca">Enter a burger you want to eat:</label>
                    <input type="text" id="ca" name="burger_name">
                </div>

                <button class="btn btn-success" type="submit">Add burger</button>
            </form>
        </center>
    </div>
    <center>
        <div class="row">
            <div class="col-md-6">
                <h1>EAT THE BURGER!</h1>

                {{#each burger}}{{#unless devoured}}

                <form class="col-md-12" action="/burger/update/{{this.id}}?_method=PUT" method="POST">
                    <h3>{{this.burger_name}}
                        <button class="btn btn-danger" type="submit">DEVOUR!</button>
                    </h3>
                </form>

                {{/unless}} {{/each}}
            </div>
            <div class="col-md-6">
                <h1>Devoured</h1> {{#each burger}}{{#if devoured}}
                <h3>{{this.burger_name}}</h3> {{/if}} {{/each}}
            </div>
        </div>
    </center>
</div>